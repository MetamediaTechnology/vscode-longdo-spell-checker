{
  "name": "longdo-spell",
  "displayName": "Longdo Spell Checker",
  "icon": "images/logo.png",
  "pricing": "Free",
  "keywords": [
    "longdo",
    "spell",
    "checker",
    "thai",
    "language",
    "thai-spell",
    "thai-spell-checker",
    "thai-spell-check"
  ],
  "description": "An extension for VS Code that checks Thai spelling without affecting system execution, developed by the Longdo team, a Thai company.",
  "publisher": "MetamediaTechnology",
  "version": "0.1.2",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Testing",
    "Language Packs",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:vue",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:php",
    "onLanguage:python",
    "onLanguage:go",
    "onLanguage:html",
    "onLanguage:css",
    "onLanguage:json",
    "onLanguage:dart",
    "onLanguage:ruby",
    "onLanguage:java",
    "onLanguage:c",
    "onLanguage:cpp",
    "onLanguage:csharp",
    "onLanguage:xml",
    "onLanguage:yaml",
    "onLanguage:plaintext",
    "onLanguage:shellscript",
    "onLanguage:sql",
    "onLanguage:rust"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Longdo Spell",
      "properties": {
        "longdo-spell.apiKey": {
          "type": "string",
          "default": "",
          "description": "Longdo Spell Checker Api Key"
        }
      }
    },
    "commands": [
      {
        "command": "longdo-spell.spell",
        "title": "Longdo: Spell Checker"
      },
      {
        "command": "longdo-spell.clear",
        "title": "Longdo: Spell Clear"
      },
      {
        "command": "longdo-spell.openSetKey",
        "title": "Longdo: Spell Set Key"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  }
}
