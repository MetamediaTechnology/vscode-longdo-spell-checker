{
  "name": "longdo-spell",
  "displayName": "longdo-spell",
  "icon": "images/logo.png",
  "description": "longdo spell is spell checker for vscode for Thai language",
  "version": "0.1.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:vue",
    "onLanguage:javascript",
    "onLanguage:php",
    "onLanguage:python",
    "onLanguage:go",
    "onLanguage:html",
    "onLanguage:json",
    "onLanguage:dart"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Longdo Spell",
      "properties": {
        "longdo-spell.apiKey": {
          "type": "string",
          "default": "",
          "description": "Longdo Spell API Key"
        }
      }
    },
    "commands": [
      {
        "command": "longdo-spell.spell",
        "title": "Longdo: Spell Checker"
      },
      {
        "command": "longdo-spell.clear",
        "title": "Longdo: Spell Clear"
      },
      {
        "command": "longdo-spell.openSetKey",
        "title": "Longdo: Spell Set Key"
      },
      {
        "command": "longdo-spell.openSettings",
        "title": "Longdo: Spell Open Settings"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
