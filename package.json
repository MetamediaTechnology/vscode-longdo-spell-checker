{
  "name": "longdo-spell",
  "displayName": "Longdo Spell Checker",
  "icon": "images/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/MetamediaTechnology/vscode-longdo-spell-checker.git"
  },
  "pricing": "Free",
  "keywords": [
    "longdo",
    "spell",
    "checker",
    "thai",
    "language",
    "thai-spell",
    "thai-spell-checker",
    "thai-spell-check"
  ],
  "description": "Thai Spell Checker for Visual Studio Code",
  "publisher": "MetamediaTechnology",
  "version": "0.2.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Testing",
    "Language Packs",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:vue",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:php",
    "onLanguage:python",
    "onLanguage:go",
    "onLanguage:html",
    "onLanguage:css",
    "onLanguage:json",
    "onLanguage:dart",
    "onLanguage:ruby",
    "onLanguage:java",
    "onLanguage:c",
    "onLanguage:cpp",
    "onLanguage:csharp",
    "onLanguage:xml",
    "onLanguage:yaml",
    "onLanguage:plaintext",
    "onLanguage:shellscript",
    "onLanguage:sql",
    "onLanguage:rust"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Longdo Spell",
      "properties": {
        "longdo-spell.apiKey": {
          "type": "string",
          "default": "",
          "description": "Longdo Spell Checker Api Key"
        },
        "longdo-spell.checkOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Check spelling on save"
        },
        "longdo-spell.locale": {
          "type": "string",
          "enum": [
            "Thai",
            "English"
          ],
          "default": "Thai",
          "description": "Set the primary language for spell checking"
        },
        "longdo-spell.language": {
          "type": "array",
          "default": [
            "Thai"
          ],
          "items": {
            "type": "string",
            "enum": [
              "Thai",
              "English"
            ]
          },
          "uniqueItems": true,
          "contains": {
            "const": "Thai"
          },
          "minItems": 1,
          "description": "Languages to check spelling"
        }
      }
    },
    "commands": [
      {
        "command": "longdo-spell.spell",
        "title": "Longdo Spell Checker: Check Spelling (Current Tab)"
      },
      {
        "command": "longdo-spell.clear",
        "title": "Longdo Spell Checker: Clear All Errors (Current Tab)"
      },
      {
        "command": "longdo-spell.openSetKey",
        "title": "Longdo Spell Checker: Set API Key"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.3.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "shiki": "^3.2.1"
  }
}
